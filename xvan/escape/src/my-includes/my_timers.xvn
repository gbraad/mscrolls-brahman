$TIMERS

 m_moves
  init      0
  step      1
  direction up
  interval  1
  state     go

 m_npc
  init       0
  step       1
  direction  up
  interval   1
  state      stop
  trigger_at 1 OR_MORE
  execute    o_npc.t_move

m_heat
  init          3
  step          1
  direction  down
  interval      1
  state      stop
  trigger_at    0
  execute       l_closet.t_leave

 m_battery
   init       250
   step       1
   direction  down
   interval   1
   state      stop
   trigger_at 0
   execute    o_lamp.t_empty

