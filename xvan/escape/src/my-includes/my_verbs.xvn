$VERB burn
 PROLOGUE
  if not(equal(o_subject, %none)) then
    if equal(o_subject, o_player) then
      print("Suicide is not the answer...\n")
      disagree()
    endif

 "burn"
   print("What do you want to burn?\n")
   getsubject()

  DEFAULT
    printcr("I only understood you as far as willing to burn something.")
ENDVERB
