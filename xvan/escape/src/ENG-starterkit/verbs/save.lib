
$VERB save
 EPILOGUE
  notimers()

 "[o_player], save"
   if not(testflag(o_player.f_may_save)) then
     printcr("Saving the game is not allowed now.")
   else
     printcr("Saving progress...")
     save()
     printcr("Done.")

 DEFAULT
   printcr("If you want to save your progress, type 'save'.")

ENDVERB


